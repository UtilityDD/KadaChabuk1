<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Animator for the exiting activity (the cover) -->
    <objectAnimator
        android:valueFrom="0"
        android:valueTo="-90"
        android:propertyName="rotationY"
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:duration="800" />

    <!-- Fade out the cover as it flips -->
    <objectAnimator android:valueFrom="1.0" android:valueTo="0.0" android:propertyName="alpha" android:duration="800" />
</set>