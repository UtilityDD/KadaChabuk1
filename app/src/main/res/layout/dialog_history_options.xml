<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="24dp"
            android:text="Reading History Options"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/option_reset_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            app:drawableStartCompat="@drawable/ic_delete_sweep"
            android:drawablePadding="24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:paddingVertical="12dp"
            android:text="Reset History"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/option_toggle_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingVertical="4dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            tools:text="Hide History" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>